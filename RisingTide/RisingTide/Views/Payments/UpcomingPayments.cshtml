@model IEnumerable<RisingTide.ViewModels.SinglePaymentWithDate>

@{
    ViewBag.Title = "UpcomingPayments";
}

<h2>UpcomingPayments</h2>

<table>
    <tr>
        <th>
            PaymentDate
        </th>
        <th>
            Amount
        </th>
        <th>
            Subject
        </th>
        <th>
            ScheduledPaymentId
        </th>
        <th>
            IncludeInCashFlowAnalysis
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PaymentDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ScheduledPaymentId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IncludeInCashFlowAnalysis)
        </td>
    </tr>
}

</table>
