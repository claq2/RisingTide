@model IEnumerable<RisingTide.Models.ScheduledPayment>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            IsDeleted
        </th>
        <th>
            Amount
        </th>
        <th>
            FirstPayment
        </th>
        <th>
            Payee
        </th>
        <th>
            Recurrence
        </th>
        <th>
            PaymentType
        </th>
        <th>
            IncludeInProjection
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IsDeleted)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstPayment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Payee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Recurrence.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaymentType.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IncludeInProjection)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
